<Window x:Class="Market_viewer.MainWindow"
        Closing="Window_Closing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Market_viewer"
        mc:Ignorable="d"
        Title="Stock application" Height="450" Width="800">
    <Grid Margin="0,0,0,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listOfStock" ItemsSource="{Binding Tickers}" Margin="12,64,0,10" HorizontalAlignment="Left" Width="88">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        <TextBlock Text=", "/>
                        <TextBlock Text="{Binding IsFavourite}"/>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListView x:Name="listOfWallet" ItemsSource="{Binding Wallets}" Margin="695,10,0,10" HorizontalAlignment="Left" Width="75" RenderTransformOrigin="0.533,0.492">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding amount}" />
                        <TextBlock Text=" " />
                        <TextBlock Text="{Binding Ticker.Name}" FontWeight="Bold" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Click="btnAddSelectedItemAmount_Click" VerticalAlignment="Bottom" Height="30" Margin="422,0,278,10" Content="Add"/>
        <Button Click="btnMinusSelectedItemAmount_Click" VerticalAlignment="Bottom" Height="30" Margin="523,0,177,10" Content="Remove"/>
        <TextBox HorizontalAlignment="Left" Margin="422,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" x:Name="AmountOfTickerToAddOrMinus"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="12,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" x:Name="AddNewTicker"/>
        <Button Click="btnAddTickerToTickers_Click"  Content="Add ticker" HorizontalAlignment="Left" Margin="100,19,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.252,0.253"/>
        <Button Content="Make Favourite" HorizontalAlignment="Left" Margin="120,357,0,0" VerticalAlignment="Top" Height="25" Width="100" Click="btnMakeFavouriteTicker_Click"/>
        <Button Content="Remove Favourite" HorizontalAlignment="Left" Margin="120,317,0,0" VerticalAlignment="Top" Width="100" Height="25" Click="btnRemoveFavouriteTicker_Click"/>
    </Grid>
</Window>